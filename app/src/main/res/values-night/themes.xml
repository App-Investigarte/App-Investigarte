<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppInvestigarte" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_secondary</item>
        <item name="colorPrimaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnPrimary">@color/color_text_onsecondary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_primary</item>
        <item name="colorSecondaryVariant">@color/color_primary_variant</item>
        <item name="colorOnSecondary">@color/color_text_onprimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_primary_Dark</item>

        <!-- Fuente de texto familia Helvetica. -->
        <item name="android:fontFamily">@font/helvetica_boldoblique</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_primary_Dark</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/splash_screen_background_night</item>
    </style>
</resources>