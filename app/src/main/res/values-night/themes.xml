<resources xmlns:tools="http://schemas.android.com/tools">


    <!-- theme. SplashScreen -->
    <style name="Theme.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#212020</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/background_splashscreen_3</item>
    </style>


    <!-- Base application theme. -->
    <style name="Theme.AppInvestigarte" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_light</item>
        <item name="colorOnPrimary">@color/color_text_onsecondary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary_cold</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant_cold</item>
        <item name="colorOnSecondary">@color/color_text_onprimary</item>
        <!-- Status bar color. -->
        <!-- No se pudo cambiar la barra del login, entonces cambiamos esto -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_primary_variant_cold</item>

        <!-- Fuente de texto familia Helvetica. -->
        <item name="android:fontFamily">@font/helvetica_boldoblique</item>

    </style>

    <!-- Theme colors cold -->
    <style name="Theme.Background_colors_cold" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary_cold</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant_cold</item>
        <item name="colorOnPrimary">@color/color_text_onprimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary_cold</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant_cold</item>
        <item name="colorOnSecondary">@color/color_text_onsecondary</item>
        <!-- Status bar color. -->
        <!-- No se pudo cambiar la barra del login, entonces cambiamos esto -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_secondary_variant_cold</item>

        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/background_activities_colors_cold</item>
    </style>

    <style name="Theme.Background" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#5D34A6</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/background_activities</item>
    </style>

    <style name="Theme.Background_welcome" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#5D34A6</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/background_activities</item>
    </style>

</resources>