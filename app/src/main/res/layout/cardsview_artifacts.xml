<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="50dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardvw_artifact1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="60dp">

        <ImageView
            android:id="@+id/artifact1_imagvw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/circle">
        </ImageView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/artifact1_txtvw"
        android:layout_width="68dp"
        android:layout_height="19dp"
        android:layout_below="@+id/cardvw_artifact1"
        android:layout_alignStart="@+id/cardvw_artifact1"
        android:layout_alignEnd="@+id/cardvw_artifact1"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="7dp"
        android:fontFamily="@font/helvetica_boldoblique"
        android:gravity="center"
        android:text="Nombre"
        android:textColor="@color/color_text_onsecondary"
        android:textStyle="bold" />


</RelativeLayout>
