<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".DescripcionActivity">

    <RelativeLayout
        android:layout_marginTop="70dp"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            app:cardBackgroundColor="@color/color_primary_light"
            app:cardCornerRadius="40dp"
            app:cardElevation="1dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="130dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginHorizontal="30dp"
                    app:cardCornerRadius="40dp">

                    <ScrollView
                        android:layout_margin="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_departamento"
                                android:layout_width="220dp"
                                android:layout_height="wrap_content"
                                android:text="Departamento:"
                                android:textColor="@color/color_text_onsecondary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txt_departamento_artifact"
                                android:layout_width="220dp"
                                android:layout_height="wrap_content"
                                android:text="Departamento"
                                android:textColor="@color/color_text_onsecondary" />

                            <TextView
                                android:id="@+id/txt_sup_reguion"
                                android:layout_width="220dp"
                                android:layout_height="wrap_content"
                                android:text="SubRegion:"
                                android:textColor="@color/color_text_onsecondary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txt_sup_reguion_artifact"
                                android:layout_width="220dp"
                                android:layout_height="wrap_content"
                                android:text="SubRegion"
                                android:textColor="@color/color_text_onsecondary" />

                            <TextView
                                android:id="@+id/txt_municipio"
                                android:layout_width="220dp"
                                android:layout_height="wrap_content"
                                android:text="Municipo:"
                                android:textColor="@color/color_text_onsecondary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txt_municipio_artifact"
                                android:layout_width="220dp"
                                android:layout_height="wrap_content"
                                android:text="Municipo"
                                android:textColor="@color/color_text_onsecondary" />


                            <TextView
                                android:id="@+id/txt_description"
                                android:layout_width="220dp"
                                android:layout_height="wrap_content"
                                android:text="Descripción:"
                                android:textColor="@color/color_text_onsecondary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txt_description_artifact"
                                android:layout_width="220dp"
                                android:layout_height="wrap_content"
                                android:text="Descripción"
                                android:textColor="@color/color_text_onsecondary" />

                        </LinearLayout>
                    </ScrollView>
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:elevation="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="100dp"
                app:cardElevation="5dp">

                <ImageView
                    android:id="@+id/img_artefacto_description"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    app:srcCompat="@drawable/ruana" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txt_name_artefact"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="NOMBRE"
                android:textColor="@color/color_text_onprimary"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>