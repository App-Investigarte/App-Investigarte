<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:theme="@style/Theme.Background_colors_cold"
    tools:context=".DescripcionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="50dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="80dp"
            app:cardBackgroundColor="@color/color_text_onprimary"
            app:cardCornerRadius="40dp"
            app:cardElevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="100dp">

                <TextView
                    android:id="@+id/txt_name_artefact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:gravity="center"
                    android:text="NOMBRE"
                    android:textColor="@color/color_text_onsecondary"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <ScrollView
                    android:id="@+id/scrollView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="24dp"
                    android:elevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/txt_departamento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Departamento:"
                            android:textColor="@color/color_text_onsecondary"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/txt_departamento_artifact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Departamento"
                            android:textColor="@color/color_text_onsecondary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_sup_reguion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="SubRegion:"
                            android:textColor="@color/color_text_onsecondary"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/txt_sup_reguion_artifact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="SubRegion"
                            android:textColor="@color/color_text_onsecondary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_municipio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Municipo:"
                            android:textColor="@color/color_text_onsecondary"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/txt_municipio_artifact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Municipo"
                            android:textColor="@color/color_text_onsecondary"
                            android:textSize="18sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/txt_community"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Comunidad:"
                            android:textColor="@color/color_text_onsecondary"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/txt_community_artifact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Comunidad"
                            android:textColor="@color/color_text_onsecondary"
                            android:textSize="18sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/txt_artisan_classification"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Clasificación Artesanal:"
                            android:textColor="@color/color_text_onsecondary"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/txt_artisan_classification_artifact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Clasificación Artesanal"
                            android:textColor="@color/color_text_onsecondary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_clothing_category"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Categorías del vestuario:"
                            android:textColor="@color/color_text_onsecondary"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/txt_clothing_category_artifact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Categorías del vestuario"
                            android:textColor="@color/color_text_onsecondary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_patrimonial_category"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Categoria Patrimonial:"
                            android:textColor="@color/color_text_onsecondary"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/txt_patrimonial_category_artifact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Categoria Patrimonial"
                            android:textColor="@color/color_text_onsecondary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <!-- Datos nuevos -->
                        <TextView
                            android:id="@+id/txt_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Descripción:"
                            android:textColor="@color/color_text_onsecondary"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/txt_description_artifact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Descripción"
                            android:textColor="@color/color_text_onsecondary"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </ScrollView>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:elevation="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:cardBackgroundColor="@color/Color_darck"
                app:cardCornerRadius="100dp"
                app:cardElevation="0dp">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="23dp"
                    app:cardBackgroundColor="@color/color_text_onprimary"
                    app:cardCornerRadius="100dp"
                    app:cardElevation="5dp">

                    <ImageView
                        android:id="@+id/img_artefacto_description"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>