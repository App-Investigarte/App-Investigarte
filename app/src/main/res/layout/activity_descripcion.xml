<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:theme="@style/Theme.Background_colors_cold"
    tools:context=".DescripcionActivity">

    <RelativeLayout
        android:layout_marginTop="70dp"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            app:cardBackgroundColor="@color/color_text_onprimary"
            app:cardCornerRadius="40dp"
            app:cardElevation="1dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="130dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                    <ScrollView
                        android:layout_margin="20dp"
                        android:elevation="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <TextView
                                android:id="@+id/txt_departamento"
                                android:layout_width="220dp"
                                android:layout_height="wrap_content"
                                android:text="Departamento:"
                                android:textColor="@color/color_text_onsecondary"
                                android:textSize="15sp"
                                 />

                            <TextView
                                android:id="@+id/txt_departamento_artifact"
                                android:layout_width="220dp"
                                android:layout_height="wrap_content"
                                android:text="Departamento"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="@color/color_text_onsecondary" />

                            <TextView
                                android:id="@+id/txt_sup_reguion"
                                android:layout_width="220dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:text="SubRegion:"
                                android:textColor="@color/color_text_onsecondary"
                                android:textSize="15sp"
                              />

                            <TextView
                                android:id="@+id/txt_sup_reguion_artifact"
                                android:layout_width="220dp"
                                android:layout_height="wrap_content"
                                android:text="SubRegion"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="@color/color_text_onsecondary" />

                            <TextView
                                android:id="@+id/txt_municipio"
                                android:layout_width="220dp"
                                android:layout_height="wrap_content"
                                android:text="Municipo:"
                                android:layout_marginTop="20dp"
                                android:textColor="@color/color_text_onsecondary"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/txt_municipio_artifact"
                                android:layout_width="220dp"
                                android:layout_height="wrap_content"
                                android:text="Municipo"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/color_text_onsecondary" />


                            <TextView
                                android:id="@+id/txt_description"
                                android:layout_width="220dp"
                                android:layout_height="wrap_content"
                                android:text="Descripción:"
                                android:layout_marginTop="20dp"
                                android:textColor="@color/color_text_onsecondary"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/txt_description_artifact"
                                android:layout_width="220dp"
                                android:layout_height="wrap_content"
                                android:text="Descripción"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/color_text_onsecondary" />
                        </LinearLayout>
                    </ScrollView>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:elevation="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="160dp"
                app:cardBackgroundColor="@color/Color_darck"
                app:cardCornerRadius="100dp"
                app:cardElevation="0dp">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="23dp"
                    app:cardBackgroundColor="@color/color_text_onprimary"
                    app:cardCornerRadius="100dp"
                    app:cardElevation="5dp">

                    <ImageView
                        android:id="@+id/img_artefacto_description"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/ic_sombrero"
                        android:scaleType="centerInside"
                        app:tint="@color/color_secondary_variant"
                        />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txt_name_artefact"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="NOMBRE"
                android:textColor="@color/color_text_onsecondary"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>