<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/color_text_onprimary">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="315"
                android:centerColor="#4785D3"
                android:endColor="@color/color_primary_cold"
                android:gradientRadius="100dp"
                android:startColor="@color/color_secondary_cold"
                android:type="linear" />

            <corners
                android:bottomLeftRadius="40dp"
                android:bottomRightRadius="40dp" />
        </shape>
    </item>

</ripple>